#!/bin/sh

# ============================
#  PakaWrt Installer Menu
#  Platform: AW1000 / AArch64
#  Author: Pakalolo Waraso
#  ============================

# Terminal Colors
CYAN="\033[0;36m"
BLUE="\033[1;34m"
GREEN="\033[1;32m"
YELLOW="\033[1;33m"
NC="\033[0m" # No Color

# Installer URLs
URL_OWRT="http://abidarwi.sh/pakafirmware_owrt-final.sh"
URL_NSS="http://abidarwi.sh/pakanss30042025.sh"
URL_NSS_LITE="http://abidarwi.sh/pakanss08052025.sh"

# Show branding
show_branding() {
    printf "${CYAN}"
    echo "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
    echo "â•‘        PAKAWRT FIRMWARE - AW1000        â•‘"
    echo "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    printf "${BLUE}Author        : Pakalolo Waraso${NC}\n"
    printf "${BLUE}Special Thanks: Awiks Telegram Group${NC}\n"
    printf "${BLUE}Maintainer    : https://github.com/BootLoopLover${NC}\n"
    printf "${CYAN}===========================================${NC}\n"
}

# Check dependencies
for cmd in wget tar opkg; do
    if ! command -v "$cmd" >/dev/null 2>&1; then
        echo "Error: Perintah '$cmd' tidak tersedia. Harap install terlebih dahulu."
        exit 1
    fi
done

# Main menu
while true; do
    clear
    show_branding
    echo ""
    echo "========== PakaWrt Firmware Menu =========="
    echo "1. Install OpenWrt 24.10.0 (Vanilla)"
    echo "2. Install NSS Build (30 April 2025)"
    echo "3. Install NSS Lite Build (8 Mei 2025)"
    echo "4. Exit to main menu"
    echo "==========================================="
    printf "Select an option [1-4]: "
    read -r choice

    case "$choice" in
        1)
            clear
            show_branding
            echo "==========================================="
            echo "           PakaWrt / AW1000"
            echo "==========================================="
            echo "Kernel      : 6.6.73"
            echo "Branch      : v24.10.0"
            echo "Developer   : Pakalolo"
            echo "Platform    : AW1000 / aarch64"
            echo "==========================================="
            echo "# Dirancang untuk modem 5G LTE & VPN (SIM unlimited, TTL64)."
            echo "# Monitoring: VnStat"
            echo "# Modem Tools: 3G Info, AT Command, Band Selector, SMS Manager"
            echo "# Tambahan: Passwall 4.6.68, Tailscale, Adblock"
            echo "==========================================="
            echo
            read -n1 -r -p "Press enter to continue your installation..."
            wget -q -O installer "$URL_OWRT" && chmod +x installer && ./installer
            read -n1 -r -p "Press any key to return to menu..." ;;
        2)
            clear
            show_branding
            echo "==========================================="
            echo "            PakawrtNss AW1000"
            echo "==========================================="
            echo "Kernel      : 6.6.79"
            echo "Branch      : 24.10-nss"
            echo "Developer   : Pakalolo"
            echo "Platform    : AW1000 / aarch64"
            echo "==========================================="
            echo "# Fokus modem LTE/VPN, stabilitas tinggi"
            echo "# Modem Tools: AT Cmd, Band Lock, SMS, QModem"
            echo "# Tambahan: Passwall2, Internet Detector, Tailscale"
            echo "==========================================="
            echo
            read -n1 -r -p "Press enter to continue your installation..."
            wget -q -O installer "$URL_NSS" && chmod +x installer && ./installer
            read -n1 -r -p "Press any key to return to menu..." ;;
        3)
            clear
            show_branding
            echo "==========================================="
            echo "          PakawrtNss Lite AW1000"
            echo "==========================================="
            echo "Kernel      : 6.6.86"
            echo "Branch      : 24.10-nss"
            echo "Developer   : Pakalolo"
            echo "Platform    : AW1000 / aarch64"
            echo "==========================================="
            echo "ðŸ“Œ Catatan Penting:"
            echo "# Support libernet, cocok SIM unlimited & VPN."
            echo "# Hotspot: aktifkan TTL fix & semua CPU di interface"
            echo "# Tools: Band Selector, QModem, Modem Info"
            echo "# Tambahan: Passwall2"
            echo "==========================================="
            echo
            read -n1 -r -p "Press enter to continue your installation..."
            wget -q -O installer "$URL_NSS_LITE" && chmod +x installer && ./installer
            read -n1 -r -p "Press any key to return to menu..." ;;
        4)
            echo -e "\nTerima kasih telah menggunakan PakaWrt!"
            exit 0 ;;
        *)
            echo "Pilihan tidak valid! Silakan coba lagi."
            sleep 1 ;;
    esac

done
